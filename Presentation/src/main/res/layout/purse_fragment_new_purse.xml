<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_new_purse_name"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/add_new_purse_elements_side_margin"
            android:layout_marginTop="@dimen/add_new_purse_elements_top_margin"
            android:layout_marginEnd="@dimen/add_new_purse_elements_side_margin"
            app:errorTextAppearance="@style/AdditionalTextStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiet_new_purse_name"
                style="@style/StandardTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/new_purse_name" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_new_purse_type"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/add_new_purse_elements_side_margin"
            android:layout_marginTop="@dimen/add_new_purse_elements_top_margin"
            android:layout_marginEnd="@dimen/add_new_purse_elements_side_margin"
            app:errorTextAppearance="@style/AdditionalTextStyle"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_new_purse_name">

            <AutoCompleteTextView
                android:id="@+id/actv_new_purse_type"
                style="@style/StandardTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/new_purse_type"
                android:inputType="none" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_new_purse_starting_balance"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/add_new_purse_elements_side_margin"
            android:layout_marginTop="@dimen/add_new_purse_elements_top_margin"
            android:layout_marginEnd="@dimen/add_new_purse_elements_side_margin"
            app:errorTextAppearance="@style/AdditionalTextStyle"
            app:endIconDrawable="@drawable/ic_baseline_delete_forever_24"
            app:endIconMode="clear_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_new_purse_type">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tiet_new_purse_starting_balance"
                style="@style/StandardTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/new_purse_starting_balance"
                android:inputType="numberDecimal" />

        </com.google.android.material.textfield.TextInputLayout>

        <HorizontalScrollView
            android:id="@+id/hsv_credit_purse_elements"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/add_new_purse_elements_side_margin"
            android:layout_marginTop="@dimen/add_new_purse_elements_top_margin"
            app:layout_constraintTop_toBottomOf="@+id/til_new_purse_starting_balance"
            tools:layout_editor_absoluteX="12dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_credit_purse_elements"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_new_purse_credit_limit"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/add_new_purse_elements_side_margin"
                    app:helperText="@string/new_purse_credit_limit"
                    app:errorTextAppearance="@style/AdditionalTextStyle"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/StandardTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_new_purse_credit_percent"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/add_new_purse_elements_side_margin"
                    app:helperText="@string/new_purse_percent"
                    app:helperTextEnabled="true"
                    app:errorTextAppearance="@style/AdditionalTextStyle"
                    app:layout_constraintStart_toEndOf="@+id/til_new_purse_credit_limit"
                    app:layout_constraintTop_toTopOf="parent"
                    app:suffixText="%">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/StandardTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="numberDecimal" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_new_purse_credit_payment_day"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/add_new_purse_elements_side_margin"
                    app:helperText="@string/new_purse_payment_day"
                    app:helperTextEnabled="true"
                    app:errorTextAppearance="@style/AdditionalTextStyle"
                    app:layout_constraintEnd_toStartOf="@+id/til_new_purse_credit_grace"
                    app:layout_constraintStart_toEndOf="@+id/til_new_purse_credit_percent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/StandardTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_new_purse_credit_grace"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/add_new_purse_elements_side_margin"
                    app:helperText="@string/new_purse_grace_period"
                    app:errorTextAppearance="@style/AdditionalTextStyle"
                    app:helperTextEnabled="true"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/StandardTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </com.google.android.material.textfield.TextInputLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

        </HorizontalScrollView>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_new_purse_currency"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/add_new_purse_elements_side_margin"
            android:layout_marginTop="@dimen/add_new_purse_elements_top_margin"
            android:layout_marginEnd="@dimen/add_new_purse_elements_side_margin"
            app:errorTextAppearance="@style/AdditionalTextStyle"
            android:focusableInTouchMode="false"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/hsv_credit_purse_elements">

            <AutoCompleteTextView
                android:id="@+id/actv_new_purse_currency"
                style="@style/StandardTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/new_purse_currency"/>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/button_new_purse_choose_color"
            style="@style/ButtonTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/add_new_purse_elements_side_margin"
            android:layout_marginTop="@dimen/add_new_purse_elements_top_margin"
            android:text="@string/new_purse_choose_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/til_new_purse_currency" />

        <Button
            android:id="@+id/button_new_purse_save"
            style="@style/ButtonTextStyle.Outlined"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/add_new_purse_elements_side_margin"
            android:layout_marginVertical="@dimen/add_new_purse_elements_top_margin"
            android:text="@string/save"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_new_purse_choose_color" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
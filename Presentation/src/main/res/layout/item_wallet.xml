<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="200dp"
	android:layout_height="100dp"
	android:background="@drawable/item_wallet_background"
	android:layout_marginHorizontal="@dimen/all_elements_separation"
	android:layout_marginVertical="@dimen/all_elements_separation">

	<TextView
		android:id="@+id/text_wallet_name"
		style="@style/StandardTextStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		app:layout_constraintBottom_toBottomOf="parent"
		android:layout_marginHorizontal="@dimen/all_elements_separation"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/text_wallet_balance"
		style="@style/StandardTextStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginTop="@dimen/all_elements_separation"
		android:layout_marginHorizontal="@dimen/all_elements_separation"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/text_wallet_name" />

</androidx.constraintlayout.widget.ConstraintLayout>
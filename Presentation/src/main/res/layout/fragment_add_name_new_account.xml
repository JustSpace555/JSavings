<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView
		android:id="@+id/text_add_new_account"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/add_new_account_elements_margin"
		android:text="@string/add_new_account"
		style="@style/HeaderTextStyle"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/text_choose_name_for_new_account"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/add_new_account_elements_margin"
		android:text="@string/choose_name_for_new_account"
		style="@style/StandartTextStyle"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/text_add_new_account" />

	<EditText
		android:id="@+id/etext_name_for_new_account"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/add_new_account_elements_margin"
		android:hint="@string/hint_input_new_account_name"
		android:importantForAutofill="no"
		android:inputType="text"
		style="@style/StandartTextStyle"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/text_choose_name_for_new_account" />

	<Button
		android:id="@+id/ok_button"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_margin="@dimen/add_new_account_elements_margin"
		style="@style/ButtonTextStyle"
		android:fontFamily="@font/raleway_semi_bold"
		tools:text="OK"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toBottomOf="@+id/etext_name_for_new_account" />


</androidx.constraintlayout.widget.ConstraintLayout>
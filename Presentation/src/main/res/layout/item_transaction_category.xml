<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<ImageView
		android:id="@+id/iv_transaction_category_icon"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:layout_marginStart="@dimen/all_elements_separation"
		android:layout_marginVertical="@dimen/all_elements_separation"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintStart_toStartOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

	<TextView
		android:id="@+id/text_transaction_category_name"
		android:textAppearance="@style/StandardTextStyle"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_marginStart="@dimen/all_elements_separation"
		app:layout_constraintBottom_toBottomOf="@+id/iv_transaction_category_icon"
		app:layout_constraintStart_toEndOf="@+id/iv_transaction_category_icon"
		app:layout_constraintTop_toTopOf="@+id/iv_transaction_category_icon" />

	<TextView
		android:id="@+id/text_transaction_category_id"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:visibility="gone"
		android:layout_marginStart="@dimen/all_elements_separation"
		app:layout_constraintBottom_toBottomOf="@+id/iv_transaction_category_icon"
		app:layout_constraintStart_toEndOf="@id/text_transaction_category_name"
		app:layout_constraintTop_toTopOf="@+id/iv_transaction_category_icon" />

	<ImageView
		android:id="@+id/iv_edit"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:clickable="true"
		android:focusable="true"
		android:src="@drawable/ic_edit"
		app:layout_constraintBottom_toBottomOf="parent"
		android:layout_marginHorizontal="@dimen/all_elements_separation"
		app:layout_constraintEnd_toStartOf="@+id/iv_delete"
		app:layout_constraintTop_toTopOf="parent" />

	<ImageView
		android:id="@+id/iv_delete"
		android:layout_width="40dp"
		android:layout_height="40dp"
		android:clickable="true"
		android:focusable="true"
		android:src="@drawable/ic_delete_color"
		android:layout_marginHorizontal="@dimen/all_elements_separation"
		app:layout_constraintBottom_toBottomOf="parent"
		app:layout_constraintEnd_toEndOf="parent"
		app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
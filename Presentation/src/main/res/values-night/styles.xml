<?xml version="1.0" encoding="utf-8"?>
<resources>

	<!--  Text styles  -->
	<style name="StandardTextStyle">
		<item name="android:textSize">8pt</item>
		<item name="fontFamily">@font/rubik_regular</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="HeaderTextStyle">
		<item name="android:textSize">16pt</item>
		<item name="fontFamily">@font/rubik_semi_bold</item>
		<item name="android:textColor">@color/white</item>
	</style>

	<style name="AdditionalTextStyle">
		<item name="android:textSize">6pt</item>
		<item name="fontFamily">@font/rubik_light_italic</item>
		<item name="android:textColor">@color/grey</item>
	</style>

	<style name="StandardTextStyle.Bold">
		<item name="fontFamily">@font/rubik_semi_bold</item>
		<item name="android:textColor">@color/white</item>
	</style>
	<!--    -->



	<!--  Button styles  -->
	<style name="ButtonTextStyle">
		<item name="android:textSize">6pt</item>
		<item name="fontFamily">@font/rubik_semi_bold</item>
		<item name="android:buttonTint">@color/primary_dark</item>
	</style>

	<style name="ButtonTextStyle.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
		<item name="android:textSize">6pt</item>
		<item name="fontFamily">@font/rubik_semi_bold</item>
		<item name="android:buttonTint">@color/primary_dark</item>
	</style>

	<style name="ButtonTextStyle.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
		<item name="android:textSize">6pt</item>
		<item name="fontFamily">@font/rubik_semi_bold</item>
		<item name="android:buttonTint">@color/primary_dark</item>
	</style>
	<!--	-->

</resources>
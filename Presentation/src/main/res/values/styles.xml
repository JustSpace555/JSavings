<?xml version="1.0" encoding="utf-8"?>

<resources>

	<style name="CustomCheckBox" parent="Widget.AppCompat.CompoundButton.CheckBox">
		<item name="android:button">@drawable/checkbox_selector</item>
		<item name="android:background">@android:color/transparent</item>
	</style>



	<style name="StandartTextStyle">
		<item name="android:textSize">6pt</item>
		<item name="fontFamily">@font/raleway_regular</item>
	</style>

	<style name="HeaderTextStyle">
		<item name="android:textSize">12pt</item>
		<item name="fontFamily">@font/raleway_semi_bold</item>
	</style>

	<style name="AdditionalTextStyle">
		<item name="android:textSize">4pt</item>
		<item name="fontFamily">@font/raleway_light</item>
	</style>

	<style name="StandartTextStyle.Bold">
		<item name="fontFamily">@font/raleway_semi_bold</item>
	</style>



	<style name="ButtonTextStyle">
		<item name="android:textSize">6pt</item>
		<item name="fontFamily">@font/raleway_semi_bold</item>
	</style>
	
